<body>
    <header>
        <nav class="navbar bg-info text-dark bg-opacity-25">
            <div class="container-fluid col-10">
                <span class="navbar-brand mb-0 h1"
                    style="font-family:Source Code Pro, monospace; font-size: 40px;">&#9994
                    &#9995 &#9996 &#129295 &#128406
                    Digital Futures Arcade &#9994 &#9995
                    &#9996 &#129295 &#128406</span>
            </div>
        </nav>
    </header>
    <main class="container text-center">
        <div class="mt-5 pt-5">
            <h1 style="font-size: 60px;">Let's play rock, paper, scissors!</h1>
            <form action="/play" method="post" class="row pt-4">
                <div class="mb-3 col">
                    <label for="player1" class="form-label display-6">Player 1:</label>
                    <input id="player1" type="text" class="form-control" name="player1" required>
                </div>
                <div class="mb-3 col pb-3">
                    <label for="player2" class="form-label display-6">Player 2:</label>
                    <input id="player2" type="text" class="form-control" name="player2" required>
                </div>
                <button type="submit" class="btn btn-info" style="font-size: 25px;">Ready to
                    play!</button>
            </form>
        </div>
    </main>
    <footer class="fixed-bottom bg-info text-dark bg-opacity-10">
        <div class="container-fluid col-6 text-center pt-3">
            <p><em>RPS challenge, by Marta Zaragoza Hidalgo</em></p>
        </div>
    </footer>

</body>

